<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="titleTextColor">@color/titleTextColor</item>
    </style>
    <!--Style of operator display textview -->
    <style name="operatorTextStyle">
        <item name="android:background">@color/displayColor</item>
        <item name="android:textColor">@color/operatorDisplayText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--Style of display screen textview -->
    <style name="displayTextStyle">
        <item name="android:background">@color/displayColor</item>
        <item name="android:textColor">@color/DisplayText</item>
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <!--Style of number buttons  -->
    <style name="buttonTextStyle">
        <item name="backgroundTint">@color/numberButton</item>
        <item name="android:textColor">@color/numberButtonText</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--Style of operator buttons  -->
    <style name="operatorButtonTextStyle">
        <item name="backgroundTint">@color/operatorButton</item>
        <item name="android:textColor">@color/operatorButtonText</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--Style of equalto buttons  -->
    <style name="equalToButtonTextStyle">
        <item name="backgroundTint">@color/equalToButton</item>
        <item name="android:textColor">@color/equalToButtonText</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--Style of backspace button-->
    <style name="backspaceButtonTextStyle">
        <item name="backgroundTint">@color/backspaceButton</item>
        <item name="android:textColor">@color/backspaceButtonText</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--Style of ON button-->
    <style name="onButtonTextStyle">
        <item name="backgroundTint">@color/onButton</item>
        <item name="android:textColor">@color/onButtonText</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>