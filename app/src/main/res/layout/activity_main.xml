<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/operator_screen"
        style="@style/operatorTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        tools:text="+" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineSeperator"

        />

    <TextView
        style="@style/displayTextStyle"
        android:id="@+id/display_screen"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        tools:text="0"
        android:textAlignment="viewEnd"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/onButtonTextStyle"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_on"
            android:onClick="buttonOn"
            />
        <Button
            style="@style/backspaceButtonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_backspace_white"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:onClick="buttonBackSpace" />
        <Button
            style="@style/operatorButtonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_divide"
            android:onClick="buttonDivide"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/buttonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_7"
            android:onClick="button7"/>
        <Button
            style="@style/buttonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_8"
            android:onClick="button8"/>
        <Button
            style="@style/buttonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_9"
            android:onClick="button9"/>
        <Button
            style="@style/operatorButtonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_multiply"
            android:onClick="buttonMultiply"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/buttonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_4"
            android:onClick="button4"/>
        <Button
            style="@style/buttonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_5"
            android:onClick="button5"/>
        <Button
            style="@style/buttonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_6"
            android:onClick="button6"/>
        <Button
            style="@style/operatorButtonTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_minus"
            android:onClick="buttonMinus"/>
    </LinearLayout>

    <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                style="@style/buttonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/button_1"
                android:onClick="button1"/>
            <Button
                style="@style/buttonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/button_0"
                android:onClick="button0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                style="@style/buttonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/button_2"
                android:onClick="button2"/>
            <Button
                style="@style/buttonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/button_."
                android:onClick="buttonDot"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                style="@style/buttonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/button_3"
                android:onClick="button3"/>
            <Button
                style="@style/equalToButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/button_equalTo"
                android:onClick="buttonEqualTo"/>
        </LinearLayout>
        <Button
            style="@style/operatorButtonTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_plus"
            android:layout_weight="1"
            android:onClick="buttonPlus"/>
    </LinearLayout>

</LinearLayout>

